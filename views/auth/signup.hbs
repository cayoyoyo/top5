<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-5 col-md-7 col-sm-9">
      <h2 class="text-center mb-4">Sign Up</h2>
      <form action="/auth/signup" method="POST" class="p-4 border rounded">

        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="username" name="username" placeholder="Your username">
          <label for="username">Username</label>
        </div>

        <div class="form-floating mb-3">
          <input type="email" class="form-control" id="email" name="email" placeholder="Your email">
          <label for="email">Email</label>
        </div>

        <div class="form-floating mb-3">
          <input type="password" class="form-control" id="password" name="password" placeholder="Your password">
          <label for="password">Password</label>
        </div>

        <div class="form-floating mb-3">
          <label for="admin">Admin</label>
          <input type="password" name="adminPassword" id="adminPassword" class="form-control" placeholder="Admin password"/>
        </div>

        <button type="submit" class="btn btn-primary">Sign Up</button>

        {{#if errorMessage}}
          <p class="error error-message">{{errorMessage}}</p>
        {{/if}}
      </form>
    </div>
  </div>
</div>
