{{#if top}}
  <div class="container top-details">
    <h2>Top by {{top.owner.username}}</h2>
    <div class="top-movies row">
      {{#each moviesData}}
        <div class="movie-item col-md-4">
          <img class="img-fluid" src="https://image.tmdb.org/t/p/w500{{this.poster_path}}" alt="{{this.title}}">
          <br><br><br>
          <p class="movie-title">{{this.title}}</p>
        </div>
      {{/each}}
    </div>
    <div class="comments-section mt-5">
  <h3>Comments</h3>
  <div class="col-md-8">
    <ul class="list-group">
      {{#each top.comments}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="comment-content">{{this.content}}</div>
          <div class="d-flex align-items-center">
            <div class="mt-2 text-muted"><br><br>by: {{this.author.username}}</div>
            {{#if this.isCurrentUserComment}}
              <a href="/alltops/{{../top._id}}/delete/{{this._id}}" class="btn btn-danger btn-sm mr-2">Delete</a>
            {{/if}}
            {{#if ../user.isAdmin}}
              <a href="/alltops/{{../top._id}}/delete/{{this._id}}" class="btn btn-danger btn-sm mr-2">Delete</a>
            {{/if}}
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>

    
    
      <div class="row mt-3">
        <div class="col-md-8">
          <form class="add-comment-form" action="/alltops/{{top._id}}/add-comment" method="POST">
            <div class="mb-3">
              <textarea name="content" rows="3" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add Comment</button>
          </form>
        </div>
      </div>
    </div>
  </div>
{{else}}
  <div class="container">
    <p>Top not found.</p>
  </div>
{{/if}}
